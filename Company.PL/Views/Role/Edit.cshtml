@model RoleViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<form asp-action="Edit">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Id"></label>
        <input class="form-control" asp-for="Id" readonly />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <partial name="PartialViews/CreateEditPartialView" />
    <input type="submit" value="Submit" class="btn btn-primary" /> ||<a class="btn btn-light" asp-action="Index">Back To List</a>
</form>
@section ValidationScriptSection{
    <partial name="_ValidationScriptsPartial" />
}


